<header>
  <div class="title"><%= @puzzle.name %></div>
  <div class="time-container">
    <div class="time-header">Time: </div>
    <div class="time"></div>
  </div>
</header> 
<div class="puzzle-image-container">
  <%= image_tag @puzzle.image_url, id: "puzzle-image" %>

  <div class="target-box"></div>
  <div class="target-choices">
    <div class="choice-title"><h3>Who did you find?</h3></div>
    <ul class="target-choices-list">
      <% @puzzle.characters.each do |character| %>
        <li class="character" data-name="<%= character.name %>">
          <div class="character-name"><%= character.name %></div>
          <div class="character-image-container">
            <%= image_tag character.image_url, class: "character-image",
                                                  id: character.name %></div>
        </li>
        <%= content_for :head do %>
          <%= tag :meta, :name => character.name,
                         :puzzle_id => character.puzzle_id, 
                         :x_position => character.x_position,
                         :y_position => character.y_position %>
        <% end %>
      <% end %>
    </ul>
</div>